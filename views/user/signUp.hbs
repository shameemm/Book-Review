

<div class="sidenav">
  <div class="login-main-text">
    <h2>Signup<br /> Join with us</h2>

  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <form action="/signUp" id="signUp" method="POST" >
        <div class="form-group">
          <label>Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Your Name"
          />
        </div>
        <div class="form-group">
          <label>Mobile Number</label>
          <input
            type="text"
            name="mobile"
            class="form-control"
            placeholder="Mobile"
          />
        </div>
        <div class="form-group">
           {{#if loginErr}}
            <div class="alert alert-danger" role="alert">
              <p class="error">mail id already exist</p>
            </div>
            {{/if}}
          <label>Email ID</label>
          <input
            type="email"
            name="email"
            class="form-control"
            placeholder="Email"
          />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Password"
          />
        </div>

        <button type="submit" class="btn btn-black">Join Us</button>
        <br>
        <p class="pt-3" >Already have <a style="color: black;" href="/">account??</a></p>

      </form>
    </div>
  </div>
</div>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script>
    $("#signUp").validate({
        rules:{
            email:{
                required:true,
                email:true
            },
            name:{
              required:true
            },
            mobile:{
              required:true,
              number:true,
              minlength:10,
              maxlength:12
            },
            password:{
                required:true,
                minlength:7
            },
        },
        messages:{
            email:"<b>*pls enter a valied email</b>",
             password:"<b>*minimum length 7 required</b>",
             name:"<b>*pls enter the name</b>",
             mobile:"<b>*pls enter a valied mobile number</b>",
        }
        
        
    })
   
</script>
