<div class="container contact-form">
            <div class="contact-image">
                <img src="https://png.pngtree.com/png-clipart/20190905/original/pngtree-book-pencil-study-book-png-image_4507678.jpg" alt="rocket_contact"/>
            </div>
            <form method="post" id="add-book" action="/booksAddToDb" enctype="multipart/form-data">
                <h3>Add Book</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="ibnNumber"  class="form-control" placeholder="IBN Number*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="bookName" class="form-control" placeholder="Book Name*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="authorName" class="form-control" placeholder="Author Name*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="language" class="form-control" placeholder="Language*" value="" />
                        </div>
                        <div class="form-group">
                            Cover Image
                            <input type="file" name="bookImage" class="form-control" placeholder="image*" value="" />
                        </div>
                        <div class="form-group">
                            Book File
                            <input type="file" name="bookFile" class="form-control" placeholder="" value="" />
                        </div>
                        
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="description" class="form-control" placeholder="Description*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="purchaseLink" class="form-control" placeholder="Link to purchase*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="yearOfPublication" class="form-control" placeholder="Year of Publication*" value="" />
                        </div>
                        <div class="form-group">
                            {{!-- <input type="text" name="Genre" class="form-control" placeholder="Genre*" value="" /> --}}
                            <select class="selectpicker" name="Genre" data-live-search="true">
                                 <option slected>pls select a Genre</option>
                                  <option data-tokens="Fantasy" value="Fantasy">Fantasy</option>
                                   <option data-tokens="Adventure" value="Adventure">Adventure</option>
                                    <option data-tokens="Romance" value="Romance">Romance</option>
                                    <option data-tokens="Dystopian" value="Dystopian">Dystopian</option>
                                    <option data-tokens="Mystery" value="Mystery">Mystery</option>
                                    <option data-tokens="Horror" value="Horror">Horror</option>
                                    <option data-tokens="Thriller" value="Thriller">Thriller</option>
                                    <option data-tokens="Thriller" value="Thriller">Thriller</option>
                                    <option data-tokens="Paranormal" value="Paranormal">Paranormal</option>
                                    <option data-tokens="Historical fiction" value="Historical fiction">Historical fiction</option>
                                    <option data-tokens="Science Fiction" value="Science Fiction">Science Fiction</option>
                                    <option data-tokens="Memoir" value="Memoir">Memoir</option>
                                    <option data-tokens="Cooking" value="Cooking">Cooking</option>
                                    <option data-tokens="Art" value="Art">Art</option>
                                    <option data-tokens="Self-help / Personal" value="Self-help / Personal">Self-help / Personal</option>
                                    <option data-tokens="Development" value="Development">Development</option>
                                    <option data-tokens="Motivational" value="Motivational">Motivational</option>
                                    <option data-tokens="Health" value="Health">Health</option>
                                    <option data-tokens="History" value="History">History</option>
                                    <option data-tokens="Travel" value="Travel">Travel</option>
                                    <option data-tokens="Guide / How-to" value="Guide / How-to">Guide / How-to</option>
                                    <option data-tokens="Families & Relationships" value="Families & Relationships">Families & Relationships</option>
                                    <option data-tokens="Humor" value="Humor">Humor</option>
                                    <option data-tokens="Children’s" value="Children’s">Children’s</option>
                                    </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <button type="submit"  class="btnContact">Add Book</button>
                        </div>
                        
                    </div>
                </div>
            </form>
</div>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script>
    $("#add-book").validate({
        rules:{
            ibnNumber:{
                required:true,
                number:true
            },
            bookName:{
                required:true
            },
            authorName:{
                required:true
            },
            language:{
                required:true
            },
            bookImage:{
                required:true
            },
            bookFile:{
                required:true
            },
            description:{
                required:true
            },
            purchaseLink:{
                required:true
            },
            yearOfPublication:{
                required:true,
                date: true
            },
            Genre:{
                required:true
            },
        },
        
    })
   
</script>